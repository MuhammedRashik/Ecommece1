<%- include('header') %>
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Products grid</h2>
                    <p>Lorem ipsum dolor sit amet.</p>
                </div>
                <div>
                    <a href="#" class="btn btn-light rounded font-md">Export</a>
                    <a href="#" class="btn btn-light rounded  font-md">Import</a>
                    <a href="/api/admin/addProduct" class="btn btn-primary btn-sm rounded">Create new</a>
                </div>
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row gx-3">
                        <div class="col-lg-4 col-md-6 me-auto">
                            <input type="text" placeholder="Search..." class="form-control">
                        </div>
                        <div class="col-lg-2 col-6 col-md-3">
                            <select class="form-select">
                                <option>All category</option>
                                <option>Electronics</option>
                                <option>Clothings</option>
                                <option>Something else</option>
                            </select>
                        </div>
                        <div class="col-lg-2 col-6 col-md-3">
                            <select class="form-select">
                                <option>Latest added</option>
                                <option>Cheap first</option>
                                <option>Most viewed</option>
                            </select>
                        </div>
                    </div>
                </header> <!-- card-header end// -->
                <div class="card-body">
                    <div class="row gx-3 row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 row-cols-xxl-5">

                        <% if (product.length > 0) { %>
                           <% for (let i = 0; i < product.length; i++) { %>
                            <div class="col">
                                <div class="card card-product-grid">
                                    <a href="#" class="img-wrap"> <img style="height: 350px;" src="/admin/assets/imgs/catogary/<%= product[i].images[0] %>" alt="Product"> </a>
                                    <div class="info-wrap">
                                        <a href="#" class="title text-truncate"><%= product[i].title %></a>
                                        <div class="price mb-2">$<%= product[i].price %></div> <!-- price.// -->
                                        <a href="/api/admin/editProduct?id=<%= product[i]._id %>" class="btn btn-sm font-sm rounded btn-brand">
                                            <i class="material-icons md-edit"></i> Edit
                                        </a>
                                        <a href="#" class="btn btn-sm font-sm btn-light rounded">
                                            <i class="material-icons md-delete_forever"></i> Delete
                                        </a>
                                        <% if (product[i].status==true) { %>
                                           
                                            <td><span><a class="badge rounded-pill alert-success" href="/api/admin/unlistProduct?id=<%= product[i]._id %>">Unlist</a></span> </td>
                                            
                                            <% } else { %>
                                                <a class="badge rounded-pill alert-success" href="/api/admin/listProduct?id=<%= product[i]._id %>">list</a></td>
                                                <% } %>


                                                



                                    </div>
                                </div> <!-- card-product  end// -->
                            </div> <!-- col.// -->


                                <% } %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="2">Product not found</td>
                                    </tr>
                                    <% } %>

                        
                       
                        
                       
                    </div> <!-- row.// -->
                </div> <!-- card-body end// -->
                <% if (totalpages) { %>
                    <div class="pagination  justify-content-center">
                      <% if (currentpage > 1) { %>
                        <button class="btn btn-sm "  ><a href="?page=<%= currentpage - 1 %>">Previous</a></button>
                      <% } %>
                  
                      <% for (let i = 1; i <= totalpages; i++) { %> <!-- Change the loop to start from 1 and go up to totalpages -->
                        <button class="btn btn-sm "  ><a href="?page=<%= i %>" class="<%= i === currentpage ? 'active' : '' %>"><%= i %></a></button>
                      <% } %>
                  
                      <% if (currentpage < totalpages) { %>
                        <button  class="btn btn-sm " ><a href="?page=<%= currentpage + 1 %>">Next</a></button>
                      <% } %>
                    </div>
                  <% } %>
            </div> <!-- card end// -->
             
           








            


























            
            
            
        </section> <!-- content-main end// -->
        
        <%- include('footer') %>