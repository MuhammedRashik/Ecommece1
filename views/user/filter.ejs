        console.log("Selected brand: " + brandName);
        
        window.location.href=`/api/user/brandFilter?brand=${brandName}` 
        // You can perform any additional actions here based on the selected brand
    });
});

//------------------------filter by product brand  name-------------------------------------








//-------------------------filter by price------------------------
const priceItems = document.querySelectorAll(".categor-list li");

// Loop through the list items and add click event listeners
priceItems.forEach((item) => {
    item.addEventListener("click", (event) => {
        // Prevent the default behavior of the anchor tag
        event.preventDefault();

        // Get the href attribute from the anchor tag
        const href = item.querySelector("a").getAttribute("href");

        // Extract the query parameters from the href
        const params = new URLSearchParams(href.split('?')[1]);

        // Get the values of maxPrice and price
        const maxPrice = params.get("maxPrice");
        const price = params.get("price");

        // Now you have both maxPrice and price values
        console.log("maxPrice: " + maxPrice);
        console.log("price: " + price);

        // You can construct your new URL with these values
        window.location.href = `/api/user/priceFilter?maxPrice=${maxPrice}&price=${price}`;

        // You can perform any additional actions here based on the selected price
    });
});


