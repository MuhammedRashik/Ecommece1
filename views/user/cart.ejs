function test(productId, cartQty, count, prPrice, i,pqty) {
    $.ajax({
        url: '/api/user/test',
        method: 'POST',
        data: {
            productId: productId,
            cartQty: cartQty,
            count: count
        },
        success: function (response) {
// alert(pqty)
           
            if (response.status) {
              if(response.quantityInput >pqty ){
                Swal.fire({
    title: 'STOCK!',
    text: 'Product is out of stock.',
    icon: 'error',
    timer: 5000
  })

              }else{
                const cartProductQtyElement = document.querySelector(`#cartProductqty${i}`);
