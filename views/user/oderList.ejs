       <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-9">
            <section class="content-main">
                <div class="content-header">
                    <div>
                        <h2 class="content-title card-title">Order List </h2>
                        <p>Lorem ipsum dolor sit amet.</p>
                    </div>
                    <div>
                        <input type="text" placeholder="Search order ID" class="form-control bg-white">
                    </div>
                </div>
                <div class="card mb-4">
                    <header class="card-header">
                        <div class="row gx-3">
                            <div class="col-lg-4 col-md-6 me-auto">
                                <input type="text" placeholder="Search..." class="form-control">
                            </div>
                            <div class="col-lg-2 col-6 col-md-3">
                                <select class="form-select">
                                    <option>Status</option>
                                    <option>Active</option>
                                    <option>Disabled</option>
                                    <option>Show all</option>
                                </select>
                            </div>
                            <div class="col-lg-2 col-6 col-md-3">
                                <select class="form-select">
                                    <option>Show 20</option>
                                    <option>Show 30</option>
                                    <option>Show 40</option>
                                </select>
                            </div>
                        </div>
                    </header> <!-- card-header end// -->
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>#ID</th>
                                        <th scope="col">Name</th>
                                       
                                        <th scope="col">Total</th>
                                        <th scope="col">Status</th>
                                        <th scope="col">Date</th>
                                        <th scope="col" class="text-end"> Action </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (orders.length> 0) { %>
                                    <% for (let i=0; i < orders.length;i++) { %>
                                        <% for (let j = 0; j < orders[i].product.length; j++) { %>
                                        <tr>
                                            <td>2323</td>
                                            <td><b><%= orders[i].product[j].title  %></b></td>
                                           
                                            <td>$<%= orders[i].totalPrice %></td>

                                            <% if (orders[i].status=='pending') { %>

                                            <td><span class="badge rounded-pill alert-warning">Pending</span></td>
                                            <% } else if(orders[i].status=='received'){ %>
                                                <td><span class="badge rounded-pill alert-success">Received</span></td>
                                                <% } else if(orders[i].status=='cancel'){ %>
                                                    <td><span class="badge rounded-pill alert-danger">Cancelled</span></td>
                                                    <% } %>

                                                    <td><%= orders[i].createdOn.toLocaleDateString() %></td>
                                            <td class="text-end">
                                                <a href="/api/user/oderDetails?id=<%= orders[i].product[j]._id %>&orderId=<%= orders[i]._id %>" class="btn btn-md rounded font-sm">Detail</a>


                                                <a href="/api/user/canselOrder?id=<%= orders[i].product[j]._id %>&orderId=<%= orders[i]._id %>"" class="btn btn-md rounded font-sm">Cancel</a>
                                               
                                                
                                            
                                            </td>
                                        </tr>

                                        <% } %> 
                                        <% } %>
                                        <% } else { %>
                                            <tr>
                                              <td colspan="2">No item found in Oders</td>
                                            </tr>
                                            <% } %>
                                   
                                   
                                    
                                   
                                  
                                 
                                   
                                   
                                   
                                 
                                  
                                </tbody>
                            </table>
                        </div> <!-- table-responsive //end -->
                    </div> <!-- card-body end// -->
                </div> <!-- card end// -->
                




                <% if (totalpages) { %>
                    <div class="pagination">
                      <% if (currentpage > 1) { %>
                        <button class="btn btn-sm"><a href="?page=<%= currentpage - 1 %>">Previous</a></button>
                      <% } %>
                  
                      <% for (let i = 1; i <= totalpages; i++) { %> <!-- Change the loop to start from 1 and go up to totalpages -->
                        <button class="btn btn-sm"><a href="?page=<%= i %>" class="<%= i === currentpage ? 'active' : '' %>"><%= i %></a></button>
                      <% } %>
                  
                      <% if (currentpage < totalpages) { %>
                        <button class="btn btn-sm"><a href="?page=<%= currentpage + 1 %>">Next</a></button>
                      <% } %>
                    </div>
                  <% } %>
            </section> <!-- content-main end// -->
        </div>
       </div>
     
    <%- include('footer') %>
       